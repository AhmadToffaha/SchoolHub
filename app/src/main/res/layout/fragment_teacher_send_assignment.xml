<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF0F5"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvsendAssignmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Assignment"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Container Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvsendAssignmentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="#F5F6F8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="520dp"
            android:background="#D9D9D9"
            android:padding="20dp">

            <!-- Subject -->
            <TextView
                android:id="@+id/tvsubjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inknut_antiqua_light"

                android:text="Subject:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spnSubject"
                android:layout_width="225dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inknut_antiqua_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvsubjectLabel"
                app:layout_constraintTop_toTopOf="@id/tvsubjectLabel" />

            <!-- Class -->
            <TextView
                android:id="@+id/tvclassLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Class:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spnSubject" />

            <Spinner
                android:id="@+id/spnClass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inknut_antiqua_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvclassLabel"
                app:layout_constraintTop_toTopOf="@id/tvclassLabel" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvtitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Title:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spnClass" />

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_background"
                android:hint="Algebra HW4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvtitleLabel"
                app:layout_constraintTop_toTopOf="@id/tvtitleLabel" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvdescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Description:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleInput" />

            <EditText
                android:id="@+id/edtDescInput"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:hint="Enter assignment details"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvdescLabel" />

            <!-- Due Date -->
            <TextView
                android:id="@+id/tvdueDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Due Date:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtDescInput" />

            <EditText
                android:id="@+id/edtDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="May 10, 2025"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvdueDateLabel"
                app:layout_constraintTop_toTopOf="@id/tvdueDateLabel" />

            <!-- Due Time -->
            <TextView
                android:id="@+id/tvdueTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Due Time:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtDueDate" />

            <EditText
                android:id="@+id/dueTimeInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="11:59 PM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvdueTimeLabel"
                app:layout_constraintTop_toTopOf="@id/tvdueTimeLabel" />

            <!-- File Attachment -->
            <TextView
                android:id="@+id/tvfileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Attach File:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dueTimeInput" />

            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="150dp"
                android:layout_height="53dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#767676"
                android:textSize="5pt"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Choose File"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvfileLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Send Button -->
    <Button
        android:id="@+id/btnSend"
        android:layout_width="77dp"
        android:layout_height="34dp"
        android:text="Send"
        android:textColor="#FFFF"
        android:backgroundTint="#990100"
        android:fontFamily="@font/@font/inknut_antiqua_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardContainer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
