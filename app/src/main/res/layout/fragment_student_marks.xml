<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8ECEF"
    tools:context=".Student.StudentMarksFragment">


    <!-- Title -->

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="My Marks"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Spinner
        android:id="@+id/spnSubject"
        android:layout_width="335dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_background"
        android:fontFamily="@font/inknut_antiqua"
        android:hint="Select Subject"
        android:padding="8dp"
        android:spinnerMode="dropdown"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintVertical_bias="0.008" />


    <ListView
        android:layout_width="338dp"
        android:layout_height="459dp"
        android:background="@drawable/search_background"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:textColor="#000"

        app:layout_constraintBottom_toTopOf="@id/spnSubject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>