<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8ECEF"
    tools:context=".Student.StudentSettingsFragment">


    <!-- Title -->


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="Settings"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/llBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgSetting"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="383dp"
        android:layout_height="324dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/search_background"

        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First Place Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#FFFF99"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#FDFDFD"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="50dp"
                    android:src="@drawable/avatar2" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anas Al Sayed"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade: "

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStudentGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 9th" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStudentAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 25" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStudentId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1221020" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAboutUs"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#A9ADB0"
                        android:text="About Us"
                        app:icon="@drawable/aboutus" />


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Place Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#CCFFCC"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp" />

        <!-- Third Place Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9999"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#971F17"
            android:text="Logout"
            android:textSize="20sp"
            app:icon="@drawable/logout" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>