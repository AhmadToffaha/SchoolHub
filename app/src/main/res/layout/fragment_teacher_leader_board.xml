<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8ECEF"
    tools:context=".Teacher.TeacherLeaderBoardFragment">

    <ImageView
        android:id="@+id/imgLraderboard"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/leaderboard2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="Leaderboard"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgLraderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@id/imgLraderboard"
        app:layout_constraintTop_toTopOf="@id/imgLraderboard"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/tvClassLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Class:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/inknut_antiqua"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgLraderboard"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnClass"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_background"
        android:fontFamily="@font/inknut_antiqua"
        android:padding="8dp"
        android:textColor="#000"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvClassLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Subject:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/inknut_antiqua"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spnClass"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spnSubject"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_background"
        android:fontFamily="@font/inknut_antiqua"
        android:padding="8dp"
        android:textColor="#000"
        android:spinnerMode="dropdown"

        app:layout_constraintTop_toBottomOf="@id/tvSubjectLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spnSubject">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#FFFF99"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFF85"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv1Student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 1 name"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv1Grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade: 70/75" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/medal1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#CCFFCC"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AEFFA4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv2Student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 2 name"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv2Grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade: 5/45" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/medal2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9999"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF888A"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv3Student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 3 name"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv3Grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade: 30/45" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/medal3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
