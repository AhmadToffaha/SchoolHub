<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EBEFF2">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="DashBoard"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Hello Ms. Sara!\nToday is Monday, May 6, 2025"
        android:textColor="#d9534f"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Today's Schedule -->
    <TextView
        android:id="@+id/tvTodaySchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Schedule"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSchedule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Math at 8:00AM - Class 9A"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tvTodaySchedule"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/schedule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Physics at 11:30AM - Class 10A"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tvSchedule1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/schedule2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Last Notification -->
    <TextView
        android:id="@+id/tvLastNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Notification"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvNotification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintTop_toBottomOf="@id/tvLastNotification"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNotification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintTop_toBottomOf="@id/tvNotification1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <TextView
        android:id="@+id/tvNotification3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotification2" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNotification3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Class Snapshot -->
    <TextView
        android:id="@+id/tvClassSnapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Snapshot"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSnapshotData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Math Avg: 84% | Attendance: 90%"
        app:layout_constraintTop_toBottomOf="@id/tvClassSnapshot"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSnapshotData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recent Submissions -->
    <TextView
        android:id="@+id/tvRecentSubmissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Submissions"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSubmission1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="• Ahmed – “Algebra HW”  -1hr ago"
        android:textColor="#990100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecentSubmissions" />

    <TextView
        android:id="@+id/tvSubmission2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Nour – “Arabic HW”  -5hr ago"
        android:textColor="#990100"
        app:layout_constraintTop_toBottomOf="@id/tvSubmission1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSubmission3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Ali – “WWE HW”  -15hr ago"
        android:textColor="#990100"
        app:layout_constraintTop_toBottomOf="@id/tvSubmission2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
