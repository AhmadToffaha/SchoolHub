<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EBEFF2">

    <!-- Dashboard Title -->

    <!-- Greeting -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="DashBoard"
        android:textColor="#800000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider -->
    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Hello Ms. Sara!\nToday is Monday, May 6, 2025"
        android:textColor="#d9534f"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Today's Schedule -->
    <TextView
        android:id="@+id/today_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Schedule"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/schedule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Math at 8:00AM - Class 9A"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/today_schedule"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/schedule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Physics at 11:30AM - Class 10A"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/schedule1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/schedule2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Last Notification -->
    <TextView
        android:id="@+id/last_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Notification"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/notification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintTop_toBottomOf="@id/last_notification"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintTop_toBottomOf="@id/notification1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notification3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Science Fair - Friday, May 10 @ IT"
        app:layout_constraintTop_toBottomOf="@id/notification2"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/notification3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Class Snapshot -->
    <TextView
        android:id="@+id/class_snapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Snapshot"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/snapshot_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Math Avg: 84% | Attendance: 90%"
        app:layout_constraintTop_toBottomOf="@id/class_snapshot"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Divider -->
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/snapshot_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recent Submissions -->
    <TextView
        android:id="@+id/recent_submissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Submissions"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/submission1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="• Ahmed – “Algebra HW”  -1hr ago"
        android:textColor="#990100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recent_submissions" />

    <TextView
        android:id="@+id/submission2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Nour – “Arabic HW”  -5hr ago"
        android:textColor="#990100"
        app:layout_constraintTop_toBottomOf="@id/submission1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/submission3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Ali – “WWE HW”  -15hr ago"
        android:textColor="#990100"
        app:layout_constraintTop_toBottomOf="@id/submission2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
