<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEFF2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher publish marks"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#990100"
            android:layout_marginBottom="16dp" />

        <!-- Dropdowns -->
        <Spinner
            android:id="@+id/spinnerSubject"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <Spinner
            android:id="@+id/spinnerTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Grade value input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grade value:"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etGradeValue"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@android:drawable/edit_text"
                android:inputType="number"
                android:text="20"
                android:gravity="center" />
        </LinearLayout>

        <!-- Grades List Container -->
        <LinearLayout
            android:id="@+id/layoutGrades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:elevation="2dp">

            <!-- Example grade item -->
            <!-- Repeat this programmatically or using RecyclerView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                android:elevation="1dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ahmad Muhsen"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#999999"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Grade"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#990100"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>

            <!-- Duplicate the above block for other students or use RecyclerView in real usage -->

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Marks"
            android:textColor="#FFFFFF"
            android:backgroundTint="#990100"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
