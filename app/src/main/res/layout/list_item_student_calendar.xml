<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="12dp"
    android:background="@drawable/bg_student_marks_card"
    android:elevation="6dp">

    <!-- Common Title (Assignment / Exam / Event) -->
    <TextView
        android:id="@+id/txtEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment"
        android:textColor="#B22222"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Subject (if available) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Subject: "
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtEventSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>


    <!-- Title (optional) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Title: "
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Algebra Homework"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- Time (Due / Starts) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Due: "
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 11:59 PM"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- Location (only for Exams and Events) -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Location: "
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 203"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
